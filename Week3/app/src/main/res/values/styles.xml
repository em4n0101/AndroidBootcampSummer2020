<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="fontFamily">@font/bitter_bold</item>
    </style>

    <!-- Style for the image in the header. -->
    <style name="imageHeaderSize" >
        <item name="android:layout_height">@dimen/header_image_size</item>
        <item name="android:layout_width">@dimen/header_image_size</item>
    </style>

    <!-- Style for views with wrap_content for both height and width. -->
    <style name="wrapperSize">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Style for views with match_parent for both height and width. -->
    <style name="matchParentSize">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="titleTextStyle" parent="wrapperSize">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="fontFamily">@font/bitter_bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="infoTextStyle" parent="wrapperSize">
        <item name="android:textSize">@dimen/font_size_general_text</item>
        <item name="fontFamily">@font/bitter</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="iconInfoPerson" >
        <item name="android:layout_height">@dimen/icon_option_size</item>
        <item name="android:layout_width">@dimen/icon_option_size</item>
    </style>

    <style name="infoTextOptionsStyle" parent="infoTextStyle">
        <item name="android:paddingStart">@dimen/padding_small</item>
    </style>
</resources>