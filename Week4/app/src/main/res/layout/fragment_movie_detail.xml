<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMovieFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_movie_poster"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:contentDescription="@string/detail_content_description"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_inception" />

        <TextView
            android:id="@+id/detail_movie_title"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView" />

        <TextView
            android:id="@+id/detail_movie_release_date"
            android:fontFamily="@font/montserrat_light"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView" />

        <TextView
            android:id="@+id/detail_movie_genre"
            android:fontFamily="@font/montserrat_light"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView" />

        <TextView
            android:id="@+id/detail_movie_duration"
            android:fontFamily="@font/montserrat_light"
            android:textSize="14sp"
            android:paddingStart="16dp"
            android:textColor="@color/primaryTextColor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="TextView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <TextView
                android:id="@+id/detail_movie_summary"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:padding="16dp"
                android:textColor="@color/primaryTextColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:text="TextView" />
        </ScrollView>
    </LinearLayout>
</FrameLayout>