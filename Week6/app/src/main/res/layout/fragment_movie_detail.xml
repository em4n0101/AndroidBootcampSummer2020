<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/detailMoviePoster"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:adjustViewBounds="true"
        android:contentDescription="@string/detail_content_description"
        android:scaleType="centerCrop"
        android:src="@drawable/poster_inception" />

    <TextView
        android:id="@+id/detailMovieTitle"
        style="@style/detail_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal" />

    <TextView
        android:id="@+id/detailMovieReleaseDate"
        style="@style/detail_movie_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_normal" />

    <TextView
        android:id="@+id/detailMovieGenre"
        style="@style/detail_movie_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_normal"
        android:paddingTop="@dimen/padding_small"
        android:paddingBottom="@dimen/padding_small" />

    <TextView
        android:id="@+id/detailMovieDuration"
        style="@style/detail_movie_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <TextView
            android:id="@+id/detailMovieSummary"
            style="@style/detail_movie_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal" />
    </ScrollView>
</LinearLayout>